{% extends 'Adminpage.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/offre.css') }}">
{% endblock %}
    

{% block body %}
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10">
                <h1 class="text-center mb-5">All Offers</h1>
                <div class="row">
                    {% for offre in offres %}
                        <div class="col-lg-6 col-md-6 mb-4">
                            <div class="card h-100 shadow">
                                <div class="card-header text-center">
                                    <h4 class="my-0">{{ offre.nomOffre }}</h4>
                                </div>
                                <div class="card-body d-flex flex-column justify-content-between">
                                    <p class="card-text mb-3">Description : {{ offre.description }}</p>
                                 
                                  
                                </div>
                                <div class="card-footer text-muted text-center">
                                    <small>Published on {{ offre.datePublication|date('d/m/Y') }}</small>
                                </div>

                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

     

{% endblock %}
