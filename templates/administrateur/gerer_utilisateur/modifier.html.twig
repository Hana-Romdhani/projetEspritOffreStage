					{{ form_label(form.gender,"Genre") }}
					{{ form_widget(form.gender,{'attr':{'class':'form-control'}}) }}
					{% if form_errors(form.gender) %}

						<div class="alert alert-danger" style=" color : red">
							{{ form_errors(form.gender) }}

						</div>
					{% endif %}

				</div>
				<div class="small-group">

					{{ form_start(form,{'attr':{'novalidate':'novalidate'}}) }}
					{{ form_label(form.agreeTerms,"agreeTerms") }}
					{{ form_widget(form.agreeTerms,{'attr':{'class':'form-control'}}) }}
					{% if form_errors(form.agreeTerms) %}

						<div class="alert alert-danger" style=" color : red">
							{{ form_errors(form.agreeTerms) }}

						</div>
					{% endif %}

				</div>

				<button class="btn">
					{{ form_widget(form.save)}}
					{{ form_widget(form._token) }}

					{{ form_end(form, {render_rest: false}) }}

				</button>
				<div class="small-group"></div>

			</div>


			<a href="{{ path('app_gerer_utilisateur_Liste') }}">
				<i class="mdi mdi-keyboard-return"></i>
			</a>

		</div>
	</div>
{% endblock %}
