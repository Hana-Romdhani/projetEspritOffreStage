						<div class="alert alert-danger" style=" color : red">
							{{ form_errors(form.date) }}
						</div>
					{% endif %}

				</div>
				<div class="small-group">

					{{ form_start(form,{'attr':{'novalidate':'novalidate'}}) }}
					{{ form_label(form.refSpecialite,"Spécialite") }}
					{{ form_widget(form.refSpecialite,{'attr':{'class':'form-control'}}) }}
					{% if form_errors(form.refSpecialite) %}

						<div class="alert alert-danger" style=" color : red">
							{{ form_errors(form.refSpecialite) }}

						</div>
					{% endif %}

				</div>
				<div class="small-group">

					{{ form_start(form,{'attr':{'novalidate':'novalidate'}}) }}
					{{ form_label(form.isdelete,"Status") }}
