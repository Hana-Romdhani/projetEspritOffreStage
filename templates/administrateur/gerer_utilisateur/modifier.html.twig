{% extends 'Adminpage.html.twig' %}

{% block title %}Edit Utilisateur
{% endblock %}

{% block body %}
	<div class="main-panel">
		<div class="content-wrapper">
			<div class="page-header">
				<h1 class="page-title">
					Modifier Utilisateur

				</h1>
				<nav aria-label="breadcrumb">
					<ol class="breadcrumb">
						<li class="breadcrumb-item">
							<a href="#">Gestion des Comptes</a>
						</li>
					</ol>
				</nav>
			</div>
			<div class="large-group">

				<div class="small-group">
					{{ form_start(form,{'attr':{'novalidate':'novalidate'}}) }}


					{{ form_label(form.nom,"Nom ") }}
					{{ form_widget(form.nom,{'attr':{'class':'form-control'}}) }}
					{% if form_errors(form.nom) %}

						<div class="alert alert-danger" style=" color : red">
							{{ form_errors(form.nom)|join }}
						</div>

					{% endif %}

				</div>


				<div class="small-group">


					{{ form_start(form,{'attr':{'novalidate':'novalidate'}}) }}
					{{ form_label(form.prenom,"Prénom") }}
					{{ form_widget(form.prenom,{'attr':{'class':'form-control '}}) }}
					{% if form_errors(form.prenom) %}

						<div class="alert alert-danger" style=" color : red">
							{{ form_errors(form.prenom) }}
						</div>
					{% endif %}


				</div>
				<div class="small-group">


					{{ form_start(form,{'attr':{'novalidate':'novalidate'}}) }}

					{{ form_widget(form.password,{'attr':{'class':'form-control ','hidden': 'hidden',}}) }}
					{% if form_errors(form.password) %}

						<div class="alert alert-danger" style=" color : red">
							{{ form_errors(form.password) }}
						</div>
					{% endif %}


				</div>
				<div class="small-group">


					{{ form_start(form,{'attr':{'novalidate':'novalidate'}}) }}

					{{ form_widget(form.urlImage,{'attr':{'class':'form-control ','hidden': 'hidden',}}) }}
					{% if form_errors(form.urlImage) %}

						<div class="alert alert-danger" style=" color : red">
							{{ form_errors(form.urlImage) }}
						</div>
					{% endif %}


				</div>

				<div class="small-group">


					{{ form_start(form,{'attr':{'novalidate':'novalidate'}}) }}
					{{ form_label(form.email,"Email") }}
					{{ form_widget(form.email,{'attr':{'class':'form-control'}}) }}
					{% if form_errors(form.email) %}

						<div class="alert alert-danger" style=" color : red">
							{{ form_errors(form.email) }}
						</div>
					{% endif %}

				</div>

				<div class="small-group">


					{{ form_start(form,{'attr':{'novalidate':'novalidate'}}) }}
					{{ form_label(form.numeroTel,"Numéro de Telephone ") }}
